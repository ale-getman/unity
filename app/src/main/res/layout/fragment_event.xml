<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.klippe.unity.fragment.EventFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="-608dp"
        tools:layout_editor_absoluteY="311dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="99dp"
            android:layout_height="97dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#cccccc"
            app:civ_border_width="2dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="159dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/id_navbar_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="880"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toRightOf="@+id/profile_image"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_persanal_hi"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/text_coun_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ballow"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/profile_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_navbar_count"
            android:layout_marginStart="16dp" />
        <TextView
            android:id="@+id/id_persanal_hi"
            android:layout_width="236dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="54dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Добрый день, Klippe!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
            android:id="@+id/group_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tbgCheckedButton="@+id/var2"
            android:layout_marginTop="8dp"
            android:foregroundGravity="center"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.057"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/var1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мероприятия"/>
            <TextView
                android:id="@+id/var2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Новости" />


        </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>

        <ListView
            android:id="@+id/listview"
            android:layout_width="376dp"
            android:layout_height="241dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="-76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_choices"
            app:layout_constraintVertical_bias="0.916"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
