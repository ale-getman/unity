<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/addad_add_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/nav_add" />

    <EditText
        android:id="@+id/addad_title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addad_add_btn"
        android:hint="Заголовок" />

    <GridView
        android:id="@+id/addad_photo_grid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addad_title_edit" />

    <Button
        android:id="@+id/addad_map_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addad_photo_grid"
        android:background="@color/trans_white"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:text="Местоположение" />

    <EditText
        android:id="@+id/addad_cost_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addad_map_btn"
        android:hint="Цена" />

    <TextView
        android:id="@+id/addad_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addad_cost_edit"
        android:layout_centerHorizontal="true"
        android:text="Описание"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/addad_description_multitext"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@id/addad_send_btn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addad_description_txt"
        android:gravity="start"
        android:hint="Описание здесь."
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/addad_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_style_2"
        android:text="Отправить"
        android:textColor="@color/white_color" />

</RelativeLayout>